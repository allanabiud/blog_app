<%- include("partials/header") %>

<main>
  <% if (posts.length === 0) { %>
    <p>No posts yet.</p>
  <% } %>
  <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <form action="/delete/<%= post.id %>" method="POST">
        <button>Edit</button>
        <button type="submit">Delete</button>
      </form>
      <a href="/edit/<%= post.id %>">Edit Post</a>
    </div>
  <% }) %>
</main>
</body>
</html>
